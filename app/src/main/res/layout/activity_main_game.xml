<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.game.MainGameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/pingPongTable"
            android:name="fr.eisti.inem.pingpong.ui.game.PingPongTable"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            tools:layout="@layout/fragment_ping_pong_table" />

        <fragment
            android:id="@+id/gameQueue"
            android:name="fr.eisti.inem.pingpong.ui.game.GameQueue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_game_queue" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>